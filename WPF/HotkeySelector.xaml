<UserControl x:Class="Apollo.HotkeySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Apollo"
             mc:Ignorable="d" Height="143" Width="523">
    <Grid Background="#FF2D2D32">
        <Button x:Name="Button" Content="{Binding ButtonText}" Background="#FF2D2D32" BorderBrush="#FF2D2D32" Foreground="White" FontSize="100" Click="Button_Click"/>
    </Grid>
</UserControl>
